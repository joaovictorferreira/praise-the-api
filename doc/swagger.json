{
   "openapi": "3.0.0",
   "info": {
       "title": "Praise the API",
       "description": "API to acess the data of all dark souls 1 bosses",
       "contact":{
            "email": "joaovictorfrra@gmail.com"
       },
       "version": "1.0.0" 
    },
    "servers": [
        {
            "url": "https://localhost:3000/bosses",
            "description": "url for test"
        },
        
        {
            "url": "https://praise-the-api.herokuapp.com",
            "description": "url for production"
        }
    ],

    "paths": {
        "/bosses/{name}":  {
            "get": {
                "summary": "get boss by name",
                "description": "route responsible for getting the data of a specific boss by its name",
                "tags": ["bosses"],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "name of the boss that you're searching",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/boss"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "boss": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "Gwyn, Lord of Cinder"
                    },
                    "location": {
                        "type": "Kiln of the First Flame"
                    },
                    "souls": {
                        "type": "70000"
                    },
                    "health": {
                        "type": "4185"
                    },
                    "drop": {
                        "type": "string"
                    }
                }
                 
            }
        }
    }
}