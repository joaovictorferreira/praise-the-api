{
   "openapi": "3.0.0",
   "info": {
       "title": "Praise the API",
       "description": "API to acess the data of all dark souls 1 bosses",
       "contact":{
            "email": "joaovictorfrra@gmail.com"
       },
       "version": "1.0.0" 
    },
    "servers": [
        {
            "url": "https://praise-the-api.herokuapp.com/bosses",
            "description": "url for production"
        },
        {
            "url": "http://localhost:3000/bosses",
            "description": "url for local testing"
        }
    ],

    "paths": {
        "/": {
            "get": {
                "summary": "Get all bosses",
                "description": "Route responsible for getting all the bosses of the game and their data",
                "tags": ["bosses"],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/All bosses"
                                }
                            }
                        }
                    }
                }
            }
        },

        "/{name}":  {
            "get": {
                "summary": "Get boss by name",
                "description": "Route responsible for getting the data of a specific boss by its name",
                "tags": ["bosses"],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "Name of the boss that you're searching",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/boss"
                                }
                            }
                        }
                    }
                }
            }
        },

        "/drops/{name}": {
            "get": {
                "summary": "Get drop by boss name",
                "description": "Route responsible for getting the drops of a specific boss by its name",
                "tags": ["bosses"],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "Name of the boss who has the drops that you're searching",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/drops"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "All bosses": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "location": {
                        "type": "string"
                    },
                    "souls": {
                        "type": "number"
                    },
                    "health": {
                        "type": "number"
                    }
                }
            },
            "boss": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "location": {
                        "type": "string"
                    },
                    "souls": {
                        "type": "number"
                    },
                    "health": {
                        "type": "number"
                    },
                    "drop": {
                        "type": "number"
                    }
                }
            },
            "drops": {
                "type":"object",
                "properties": {
                    "loot": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    }
                }
            }
        }
    }
}